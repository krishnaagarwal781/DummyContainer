FROM node:20-alpine AS build

WORKDIR /app
COPY package.json vite.config.js ./
COPY src ./src
COPY index.html ./

RUN npm install
RUN npm run build

FROM nginx:alpine

# Copy built frontend
COPY --from=build /app/dist /usr/share/nginx/html

# Copy custom nginx config
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

